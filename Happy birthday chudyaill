    <script>
        // --- Three.js Background Logic ---
        let scene, camera, renderer, hearts = [];
        const heartGroup = new THREE.Group();

        function initThree() {
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('three-canvas'), alpha: true, antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);

            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);index.html
            const pointLight = new THREE.PointLight(0xff4d91, 1);
            pointLight.position.set(10, 10, 10);
            scene.add(pointLight);

            // Simple Heart Shape
            const x = 0, y = 0;
            const heartShape = new THREE.Shape();
            heartShape.moveTo( x + 5, y + 5 );
            heartShape.bezierCurveTo( x + 5, y + 5, x + 4, y, x, y );
            heartShape.bezierCurveTo( x - 6, y, x - 6, y + 7,x - 6, y + 7 );
            heartShape.bezierCurveTo( x - 6, y + 11, x - 3, y + 15.4, x + 5, y + 19 );
            heartShape.bezierCurveTo( x + 12, y + 15.4, x + 16, y + 11, x + 16, y + 7 );
            heartShape.bezierCurveTo( x + 16, y + 7, x + 16, y, x + 10, y );
            heartShape.bezierCurveTo( x + 7, y, x + 5, y + 5, x + 5, y + 5 );

            const geometry = new THREE.ExtrudeGeometry(heartShape, { depth: 2, bevelEnabled: true, bevelThickness: 1, bevelSize: 1 });
            const material = new THREE.MeshPhongMaterial({ color: 0xff4d91, shininess: 100 });

            for (let i = 0; i < 25; i++) {
                const heart = new THREE.Mesh(geometry, material);
                heart.position.set(
                    (Math.random() - 0.5) * 100,
                    (Math.random() - 0.5) * 60,
                    (Math.random() - 0.5) * 50
                );
                heart.rotation.z = Math.PI;
                heart.scale.set(0.1, 0.1, 0.1);
                heart.userData = {
                    speed: 0.005 + Math.random() * 0.01,
                    angle: Math.random() * Math.PI * 2
                };
                hearts.push(heart);
                heartGroup.add(heart);
            }
            scene.add(heartGroup);
            camera.position.z = 50;
        }

        function animate() {
            requestAnimationFrame(animate);
            hearts.forEach(h => {
                h.position.y += Math.sin(Date.now() * 0.001 + h.userData.angle) * 0.02;
                h.rotation.y += 0.01;
            });
            renderer.render(scene, camera);
        }

        // --- Navigation Logic ---
        let currentStep = 1;

        function nextStep(step) {
            const currentCard = document.getElementById(`step-${currentStep}`);
            const nextCard = document.getElementById(`step-${step}`);
            
            gsap.to(currentCard, {
                opacity: 0,
                y: -20,
                duration: 0.5,
                onComplete: () => {
                    currentCard.style.display = 'none';
                    nextCard.style.display = 'block';
                    gsap.fromTo(nextCard, 
                        { opacity: 0, y: 30 }, 
                        { opacity: 1, y: 0, duration: 0.6, ease: "back.out(1.7)" }
                    );
                    currentStep = step;
                    document.getElementById('progress-fill').style.width = `${(step/5) * 100}%`;
                }
            });
        }

        // --- Step 4 Polaroid Interaction ---
        const polaroid = document.getElementById('polaroid');
        document.addEventListener('mousemove', (e) => {
            if (currentStep === 4) {
                const xAxis = (window.innerWidth / 2 - e.pageX) / 25;
                const yAxis = (window.innerHeight / 2 - e.pageY) / 25;
                polaroid.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg) rotate(-3deg)`;
            }
        });

        // --- Finale Logic ---
        function startFinale() {
            const btn = document.getElementById('celebrate-btn');
            const finaleText = document.getElementById('finale-text');
            
            btn.style.pointerEvents = 'none';
            gsap.to(btn, { opacity: 0, scale: 0.8, duration: 0.3 });
            
            setTimeout(() => {
                finaleText.style.display = 'block';
                gsap.from(finaleText, { opacity: 0, y: 20, duration: 1 });
            }, 400);

            // Confetti
            const duration = 5 * 1000;
            const end = Date.now() + duration;

            (function frame() {
                confetti({
                    particleCount: 3,
                    angle: 60,
                    spread: 55,
                    origin: { x: 0, y: 0.8 },
                    colors: ['#ff4d91', '#ff1a1a', '#ffffff']
                });
                confetti({
                    particleCount: 3,
                    angle: 120,
                    spread: 55,
                    origin: { x: 1, y: 0.8 },
                    colors: ['#ff4d91', '#ff1a1a', '#ffffff']
                });

                if (Date.now() < end) {
                    requestAnimationFrame(frame);
                }
            }());

            // Emoji Shower8645c0134872a6ab8687f6f01055d855ed2e1d0b
            const scalar = 2;
            const heartIcon = confetti.shapeFromText({ text: '‚ù§Ô∏è', scalar });
            const sparkIcon = confetti.shapeFromText({ text: '‚ú®', scalar });

            confetti({
                shapes: [heartIcon, sparkIcon],
                particleCount: 40,
                spread: 70,
                origin: { y: 0.6 }
            });

            // Heart Exit
            hearts.forEach((h, i) => {
                gsap.to(h.position, {
                    x: h.position.x * 5,
                    y: 100,
                    z: h.position.z + 50,
                    duration: 3,
                    delay: i * 0.05,
                    ease: "power2.in"
                });
                gsap.to(h.scale, { x: 0, y: 0, z: 0, duration: 3, delay: i * 0.05 });
            });
        }

        // Init
        window.onload = () => {
            initThree();
            animate();
            gsap.to("#step-1", { opacity: 1, y: 0, duration: 1, delay: 0.5 });
        };

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
    </script>
</body>
